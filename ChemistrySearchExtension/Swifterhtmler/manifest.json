{
    "manifest_version": 2,
    "name": "Chemistry Extension",
    "version": "1.3",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "clipboardWrite"

    ],
    "commands": {
      "openPopup": {
        "suggested_key": {
          "default": "Alt+U",
          "mac": "Command+U"
        },
        "description": "Opens Popup"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  